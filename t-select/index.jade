index:(arrays='option/options' element='t-select' attributes='create')
  .dropdown(class="{{if open}}open{{/if}}")
    input(as='input' type='text' on-focus='makeActive()' autocomplete='off' value='{{label(value)}}')
    ul.dropdown-menu.text-select(class='{{@menuClass}}' as='menu' role='menu' aria-labelledby='dropdown-toggle{{id}}')
      each @options as #o, #i
        li(class="{{#o['class']}}{{if #i == selectedIndex}} active{{/if}}" role='presentation')
          if #i == selectedIndex
            a.active-item(id='{{id + #i}}' tabindex='0' on-click='select(#o)' role='menuitem' aria-selected='true') {{#o.content}}
          else
            a.active-item(id='{{id + #i}}' tabindex='-1' on-click='select(#o)' role='menuitem' aria-selected='false') {{#o.content}}

      li(class="t-select-create" role='presentation')
        a(tabindex='-1' on-click='fireNew()' role='menuitem' aria-selected='false')
          t-icon(icon='add-circle-outline')
          | &nbsp; {{createLabel}}

  //- .selectize-control.single
    .selectize-input.items.full.has-options.has-items.focus.input-active.dropdown-active
      .item(data-value='1service-type') Script
      input(type='text', autocomplete='off', tabindex='', style='width: 4px; opacity: 1; position: relative; left: 0px;')
    .selectize-dropdown.single(style='display: block; visibility: visible; width: 196px; top: 34px; left: 0px;')
      .selectize-dropdown-content
        .option.selected(data-value='1service-type', data-selectable='') Script
        .option(data-value='2service-type', data-selectable='') Styleframes
        .option.active(data-value='8service-type', data-selectable='') Design
        .option(data-value='30service-type', data-selectable='') Sound Effects
